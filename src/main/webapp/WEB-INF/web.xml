<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
	<display-name></display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:applicationContext.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.huigujia.utils.FastjsonInitListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.huigujia.common.ip.mon17.IP17MonInitListener</listener-class>
	</listener>

	<filter>
		<description>字符集过滤器</description>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<description>字符集编码</description>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	    <init-param>
	        <param-name>forceEncoding</param-name>
	        <param-value>true</param-value>
	    </init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- session filter -->
	<filter>
		<filter-name>hgjSessionFilter</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>hgjSessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>loginFilterProxy</filter-name>
	    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	    <init-param>
	        <param-name>targetBeanName</param-name>
	        <param-value>loginFilter</param-value>
	    </init-param>
	</filter>
	<filter-mapping>
		<filter-name>loginFilterProxy</filter-name>
		<url-pattern>/wap/cart/*</url-pattern>
		<url-pattern>/wap/trade/*</url-pattern>
		<url-pattern>/wap/cart.html</url-pattern>
		<url-pattern>/cart/*</url-pattern>
		<url-pattern>/hyd/cart/*</url-pattern>
		<url-pattern>/trade/*</url-pattern>
		<url-pattern>/cart.html</url-pattern>
		<url-pattern>/wap/i.html</url-pattern>
		<url-pattern>/war/seckill.html</url-pattern>
		<url-pattern>/wap/user/getUserInfo.html</url-pattern>
		<url-pattern>/wap/convenientstore/person.html</url-pattern>
		<url-pattern>/wap/user/getUserInviteCode.do</url-pattern>
		<url-pattern>/wap/user/signin.json</url-pattern>
		<url-pattern>/wap/user/address.html</url-pattern>
		<url-pattern>/wap/user/select/address</url-pattern>
		<url-pattern>/wap/user/addressAdd.html</url-pattern>
		<url-pattern>/wap/user/redList.html</url-pattern>
		<url-pattern>/javaApis/user/*</url-pattern>
		<url-pattern>/wap/bld/tradeList.html</url-pattern>
		<url-pattern>/wap/gift/giftRecharge.html</url-pattern>
		<url-pattern>/wap/message/abstract.html</url-pattern>
		<url-pattern>/gift/giftRecharge.html</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>checkClientFilter</filter-name>
		<filter-class>com.huigujia.filter.CheckClientFilter</filter-class>
		<init-param>
			<param-name>includedPages</param-name>
			<param-value>/hgj/shop/shop.html</param-value>
		</init-param>
		<init-param>
			<param-name>excludedPages</param-name>
			<param-value>/css/,/js/,/img/,/hgj/,/javaApis/,/prize/</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>checkClientFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>userFilterProxy</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>userFilter</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>userFilterProxy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>inviteFilter</filter-name>
		<filter-class>com.huigujia.filter.InviteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>inviteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>spokespersonPromotionFilter</filter-name>
		<filter-class>com.huigujia.filter.SpokespersonPromotionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>spokespersonPromotionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- xss filter -->
	<filter>
		<filter-name>xss-filter</filter-name>
		<filter-class>com.huigujia.filter.XssFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>xss-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>bldItem</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
		<init-param>
			<param-name>targetBeanName</param-name>
			<param-value>bldShopFilter</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>bldItem</filter-name>
		<url-pattern>/javaApis/bldShop/addItems.json</url-pattern>
		<url-pattern>/javaApis/bldShop/mdfItems.json</url-pattern>
		<url-pattern>/javaApis/bldShop/delItems.json</url-pattern>
		<url-pattern>/javaApis/item/itemLib.json</url-pattern>
		<url-pattern>/javaApis/item/allItemLib.json</url-pattern>
		<url-pattern>/javaApis/bldShop/v2/shop/*</url-pattern>
		<url-pattern>/javaApis/bldShop/v3/shop/*</url-pattern>
		<url-pattern>/wap/shop/convenientStore/trade/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>huigujia</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>huigujia</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>
</web-app>